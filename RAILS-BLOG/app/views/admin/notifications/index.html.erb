<h1>Notification</h1>

<%=
  if Notification.any?
    link_to 'Dismiss All', dismiss_all_notifications_path, method: :delete
  end
%>

<% @visitor_notifications.each do |notify| %>
<p>
  <%= "#{notify.notifiable.fullname} added as a new visitior #{time_ago(notify.created_at)}" %>
  <%= link_to 'Dismiss', admin_notification_path(notify), method: :delete, data: {confirm: 'Are you sure?.'} %>
</p>
<% end %>

<hr>

<% @comment_notifications.each do |notify| %>
<p>
  <%= "#{notify.notifiable.visitor.fullname} was added #{time_ago(notify.created_at)}" %>
  <%= link_to 'Dismiss', admin_notification_path(notify), method: :delete, data: {confirm: 'Are you sure?.'} %>
</p>
<% end %>
