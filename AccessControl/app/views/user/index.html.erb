<h1>User</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>email</th>
      <th>Role</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user|%>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= Role.where(id: user.role_id)[0].role_type %></td>
        <% if @link_flag %>
          <td>
            <%= link_to 'Edit_Role', edit_user_path(user) %>
          </td>
        <% end %>
      </tr>
    <%end%>
  </tbody>
</table>