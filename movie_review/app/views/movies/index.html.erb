<% if user_signed_in? %>
  <div class="jumbotron">
    <h1>Your Favourite Movie Reviewed</h1>
    <p>Thor,Harry Potter,Expandables</p>
    <p><%= link_to 'Sign Up To Write A Review', new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>
<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to ( image_tag movie.image_url, class: 'image'), movie_path(movie) %>
      </div>
    </div>
  <% end %>
</div>